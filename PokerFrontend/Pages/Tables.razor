@page "/tables"
@using PokerFrontend.Models
@using PokerFrontend.Services
@inject IPokerApiService PokerApi
@inject NavigationManager Nav
@inject IAuthService Auth

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>Tables</h2>
        </div>
        <div class="col text-end">
            <button class="btn btn-primary" @onclick="ShowCreateModal">+ New Table</button>
            <button class="btn btn-outline-secondary" @onclick="LogoutAsync">Logout</button>
        </div>
    </div>

    @if (tables == null)
    {
        <p>Loading tables...</p>
    }
    else if (tables.Count == 0)
    {
        <p>No tables available. Create one!</p>
    }
    else
    {
        <div class="row">
            @foreach (var table in tables)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@table.TableName</h5>
                            <p class="card-text">
                                <small class="text-muted">
                                    Status: @table.Status | Players: @table.CurrentPlayers/@table.MaxPlayers <br />
                                    Buy-In: @table.MinBuyIn - @table.MaxBuyIn
                                </small>
                            </p>
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => SelectTableAsync(table.Id)">Join</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Create Table Modal -->
<div class="modal" style="display: @(showCreate ? "block" : "none")">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Table</h5>
                <button class="btn-close" @onclick="HideCreateModal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Table Name</label>
                    <input type="text" class="form-control" @bind="newTableName" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Min Buy-In</label>
                    <input type="number" class="form-control" @bind="newTableMinBuyIn" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Max Buy-In</label>
                    <input type="number" class="form-control" @bind="newTableMaxBuyIn" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="HideCreateModal">Cancel</button>
                <button class="btn btn-primary" @onclick="CreateTableAsync">Create</button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Table>? tables;
    private bool showCreate = false;
    private string newTableName = "";
    private long newTableMinBuyIn = 100;
    private long newTableMaxBuyIn = 10000;

    protected override async Task OnInitializedAsync()
    {
        await LoadTablesAsync();
    }

    private async Task LoadTablesAsync()
    {
        tables = await PokerApi.GetTablesAsync();
    }

    private void ShowCreateModal() => showCreate = true;
    private void HideCreateModal() => showCreate = false;

    private async Task CreateTableAsync()
    {
        if (string.IsNullOrWhiteSpace(newTableName))
            return;

        var tableId = await PokerApi.CreateTableAsync(newTableName, newTableMinBuyIn, newTableMaxBuyIn);
        if (tableId.HasValue)
        {
            HideCreateModal();
            await LoadTablesAsync();
        }
    }

    private async Task SelectTableAsync(int tableId)
    {
        Nav.NavigateTo($"/seat/{tableId}");
    }

    private async Task LogoutAsync()
    {
        await Auth.LogoutAsync();
        Nav.NavigateTo("/login");
    }
}
