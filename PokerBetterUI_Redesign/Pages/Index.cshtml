    .winner-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.85);
        backdrop-filter: blur(10px);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 100;
        animation: fadeIn 0.5s ease-out;
    }

    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @@keyframes fadeOut {
        from { opacity: 1; }
        to { opacity: 0; }
    }

    .winner-modal {
        position: relative;
        padding: 40px;
        background: linear-gradient(135deg, rgba(20, 20, 30, 0.95), rgba(60, 20, 80, 0.95));
        backdrop-filter: blur(20px);
        border: 3px solid #ffd700;
        border-radius: 25px;
        text-align: center;
        max-width: 500px;
        box-shadow: 
            0 0 60px rgba(255, 215, 0, 0.8),
            inset 0 0 40px rgba(138, 43, 226, 0.3);
        animation: modalPop 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    }

    @@keyframes modalPop {
        0% {
            opacity: 0;
            transform: scale(0.3) rotate(-10deg);
        }
        80% {
