@model PokerWebApp.Models.GameStateViewModel

@{
    ViewData["Title"] = "Poker Lobby";
}

<h2>üÉè Poker Lobby</h2>

<!-- ===== ADD PLAYER ===== -->
<h3>Add Player</h3>

<form asp-action="AddPlayer" asp-controller="Poker" method="post">
    <input type="text"
           name="name"
           placeholder="Player name"
           required />

    <input type="number"
           name="chips"
           placeholder="Starting chips"
           value="1000"
           min="1"
           required />

    <button type="submit">Add Player</button>
</form>

<hr />

<!-- ===== PLAYER LIST ===== -->
<h3>Current Players</h3>

@if (!Model.Players.Any())
{
    <p><em>No players yet</em></p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Chips</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model.Players)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Chips</td>
            </tr>
        }
        </tbody>
    </table>
}

